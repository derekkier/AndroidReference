<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <TextView android:text="@string/bill_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billTextView"
        android:ems="5"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/billEditText"
        android:text="@string/bill_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:padding="0dp"
        android:inputType="numberDecimal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp" />

    <EditText
        android:id="@+id/tipEditText"
        android:text="@string/tip_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:inputType="numberDecimal" />

    <TextView
        android:text="@string/tip_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipTextView"
        android:ems="5"
        android:padding="0dp"
        android:maxWidth="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/tipEditText"
        android:layout_marginEnd="67dp" />

    <TextView
        android:text="@string/final_bill_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finalBillTextView"
        android:ems="5"
        android:padding="0dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tipEditText"
        android:layout_alignStart="@+id/tipTextView" />

    <EditText
        android:id="@+id/finalBillEditText"
        android:text="@string/bill_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:padding="0dp"
        android:inputType="numberDecimal"
        android:layout_below="@+id/finalBillTextView"
        android:layout_alignStart="@+id/finalBillTextView"
        android:layout_marginTop="23dp" />


</RelativeLayout>
